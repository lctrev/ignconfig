variant: fcos
version: 1.4.0
systemd:
  units:
    - name: sshd.socket
      dropins:
      - name: 10-sshd-port.conf
        contents: |
          [Socket]
          ListenStream=226         
passwd:
  users:
    - name: lucas
      groups:
        - wheel
        - sudo
      ssh_authorized_keys:
        - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIF17ubIkcZ1Z9YamYKH/OZTP+8QlsIyUD+lZ5/IAsPc9
storage:
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: |
          srv1
  disks:
    - device: /dev/vda
      wipe_table: true
      partitions:
        - number: 1
          label: swap
          size_mib: 1430
  filesystems:
    - device: /dev/disk/by-partlabel/swap
      format: swap
      wipe_filesystem: true
      with_mount_unit: true